<span>You have: $<%= session["purse"] %></span>
<hr>
<% if session["bet"] == 0 %>
  <form action = "/blackjack" method = "post">
    <input type = "number" name = "bet" placeholder = "$" min="1" max="<%= session["purse"] %>">
    <input type = "submit" value = "Place Bet">
  </form>
<% else %>
  <div>Dealer Hand: <% session["dealer_cards"].each do | card | %>
      <img id="card" src="assets/<%=card[0].to_s%>_of_<%=card[1]%>.png">
    <% end %>
    <span><%= session["dealer_total"] %>
  </div>
  <hr>
  <div>Player Hand: <% session["player_cards"].each do | card | %>
      <img id="card" src="assets/<%=card[0].to_s%>_of_<%=card[1]%>.png">
    <% end %>
    <span><%= session["player_total"] %>
    <br>
    <% if session["player_bust"] == true %>
      <%= erb :"/shared/bust" %>
      <%= erb :"/shared/play_again" %>
    <% else %>
      <form action = "/hit" method = "post">
        <button class=" btn btn-default">Hit</button>
      </form>
      <form action = "/stay" method = "post">
        <button class="btn btn-default">Stay</button>
      </form>
    <% end %>
  </div>
<% end %>
<hr>
<form action = "/reset" method = "post">
  <input type = "submit" value = "Reset Game">
</form>
